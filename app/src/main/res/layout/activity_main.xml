<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etName" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:hint="Name"
            android:layout_marginTop="68dp" app:layout_constraintTop_toBottomOf="@+id/txtTitle"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etSubject"
            android:hint="Subject"
            app:layout_constraintStart_toStartOf="@+id/etName" app:layout_constraintEnd_toEndOf="@+id/etName"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/etName"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etBody"
            app:layout_constraintStart_toStartOf="@+id/etSubject" app:layout_constraintEnd_toEndOf="@+id/etSubject"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/etSubject" android:hint="Body"/>
    <Button
            android:text="Notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnNotification" app:layout_constraintStart_toStartOf="@+id/etBody"
            app:layout_constraintEnd_toEndOf="@+id/etBody" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/etBody"/>
    <TextView
            android:text="Notification Practice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtTitle" android:textSize="30sp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="80dp" app:layout_constraintTop_toTopOf="parent" android:textStyle="bold"
            android:typeface="sans" android:fontFamily="sans-serif-condensed-light"/>
</android.support.constraint.ConstraintLayout>